{
    "version": 2,
    "buildCommand": "bash .scripts/build-deploy.sh && cd backend/todoporbogota && npm install && npm run build",
    "outputDirectory": "backend/todoporbogota",
    "functions": {
        "api/index.ts": {
            "memory": 1024,
            "maxDuration": 10
        }
    },
    "routes": [
        {
            "src": "/api/.*",
            "dest": "/api/index.ts"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.ts"
        }
    ]
}